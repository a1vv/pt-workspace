import java.util.Scanner;
import se.lth.cs.pt.timer.Timer;

public class Game {
	private boolean running;
	private Tiles tiles;

	public Game() {
		this.running = true;
		tiles = new Tiles();
	}

	public void start() {
		Scanner scan = new Scanner(System.in);
		print("C O N N E C T   F O U R");
		print("but sideways... Drop tiles from the right side of the screen instead of from the top.");
		// ask for player names and create player objects
		print("Player One: Enter your name");
		String p1n = scan.nextLine();
		Player p1 = new Player(p1n, "\u25cf");
		print("You entered: " + p1n);
		print("Player Two: Enter your name");
		String p2n = scan.nextLine();
		Player p2 = new Player(p2n, "\u25cb");
		print("You entered: " + p2n);
		// start game?
		print("Start game? y/n");
		while(true) {
			String answer = scan.nextLine();
			if (answer.equals("y")) {
				runGame();
			} else if (answer.equals("n")) {
				this.print("ait");
			} else {
				this.print("Invalid input. Enter y or n");
			}
		}
	}

	public void runGame() {
		printBoard();
		while (this.running) {
			
		}
	}
	
	private void printBoard() {
		for (int i = 0; i<9 ; i++) {
			for (int j = 0 ; j < 9 ; j++) {
				print(tiles.Board()[i][j]);
			}
		}
	}
	
	private void print(String s) {
		System.out.println(s);
	}
}
