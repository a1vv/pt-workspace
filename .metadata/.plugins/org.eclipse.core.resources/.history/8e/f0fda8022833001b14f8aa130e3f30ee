
public class Tiles {
	private static String[][] board = new String[9][9];
	private static int[] placed = new int[9];
	
	public Tiles() {
		for (int i = 0; i<10 ; i++) {
			placed[i] = 0;
			for (int j = 0 ; j < 10 ; j++) {
				board[i][j] = " ";
			}
		}
	}

	public static void placeTile(Player p, int row) {
		board[row][placed[row]] = p.Symbol();
	}
}
