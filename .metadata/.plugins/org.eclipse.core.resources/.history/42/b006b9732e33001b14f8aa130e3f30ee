// handles the data
public class Tiles {
	private String[][] board = new String[9][9];
	private int[] placed = new int[9];
	
	public Tiles() {
		for (int i = 0; i<9 ; i++) {
			placed[i] = 0;
			for (int j = 0 ; j < 9 ; j++) {
				board[i][j] = " ";
			}
		}
	}

	public void placeTile(Player p, int column) {
		column -= 1;
		board[placed[column]][column] = p.Symbol();
	}
	
	public String[][] Board(){
		return this.board;
	}
}
